<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="224.0" prefWidth="607.0" spacing="15.0" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="companyName" contentDisplay="CENTER" text="{Client name}">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <Label fx:id="companyDescription" text="{description}" />
      <HBox prefHeight="93.0" prefWidth="517.0" spacing="30.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="75.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <Image url="@../../assets/user.png" />
                  </ImageView>
                  <Label fx:id="refereeName" text="Label" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="75.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <Image url="@../../assets/email.png" />
                  </ImageView>
                  <Label fx:id="refereeEmail" text="Label" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="75.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <Image url="@../../assets/call.png" />
                  </ImageView>
                  <Label fx:id="refereeTel" text="Label" />
               </children>
            </VBox>
         </children>
      </HBox>
      <TilePane alignment="TOP_RIGHT" prefHeight="50.0" prefWidth="438.0">
         <opaqueInsets>
            <Insets top="30.0" />
         </opaqueInsets>
         <children>
            <Button mnemonicParsing="false" style="-fx-background-color: #1B3B6F;" text="Edit" textFill="WHITE" onAction="#editClientAction">
               <TilePane.margin>
                  <Insets right="10.0" />
               </TilePane.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" style="-fx-background-color: #1B3B6F;" text="Delete" textFill="#fdfdfd" onAction="#deleteClientAction">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets right="30.0" />
         </padding>
      </TilePane>
   </children>
</VBox>
