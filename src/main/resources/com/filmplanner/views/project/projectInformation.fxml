                  <Insets right="10.0" />
               </TilePane.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#deleteProjectAction" style="-fx-background-color: #1B3B6F;" text="Delete" textFill="#fdfdfd">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets right="30.0" />
         </padding>
      </TilePane>
   </children>
</VBox>
