<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox minHeight="-Infinity" minWidth="-Infinity" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox>
         <children>
            <Label text="File:">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="filePath" layoutX="10.0" layoutY="10.0" text="/path/to/filename" />
            <Button fx:id="chooseFile" mnemonicParsing="false" onAction="#openFileChooser" style="-fx-background-color: #1B3B6F;" text="Choose file" textFill="#fdfdfd">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <TextField fx:id="paperworkDescription" layoutX="10.0" layoutY="10.0" text="Paperwork description">
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin></TextField>
      <TilePane alignment="TOP_RIGHT" prefHeight="50.0" prefWidth="438.0">
         <opaqueInsets>
            <Insets top="30.0" />
         </opaqueInsets>
         <children>
            <Button fx:id="validateButton" mnemonicParsing="false" onAction="#validateAction" style="-fx-background-color: #1B3B6F;" text="Validate" textFill="#fdfdfd">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets right="30.0" />
         </padding>
      </TilePane>
   </children>
</VBox>
